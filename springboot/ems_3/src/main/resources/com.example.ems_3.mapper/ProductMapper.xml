<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ems_3.mapper.ProductMapper">

    <resultMap id="ProductEntityMap" type="com.example.ems_3.entity.Product">
        <id column="id" property="id"/>
        <result column="uid" property="uid"></result>
        <result column="pimg" property="pimg"></result>
        <result column="proname" property="proname"></result>
        <result column="introduce" property="introduce"></result>
        <result column="price" property="price"></result>
        <result column="number" property="number"></result>
        <result column="type" property="type"></result>
        <result column="others" property="others"></result>
    </resultMap>
<!--
    Product findById(@Param("id") Integer id);
    List<Product> findAllProByType(String type);
-->

    <select id="findById" resultMap="ProductEntityMap">
        select *
        from t_product
        where id=#{id}
    </select>

    <select id="findAllProByType" resultMap="ProductEntityMap">
        select *
        from t_product
        where type=#{type}
        order by id desc
        /*
        lim 加上数量
        */
    </select>

    <select id="findAllPro" resultMap="ProductEntityMap">
        select *
        from t_product
        order by id desc
        /*
        lim 加上数量
        */
    </select>












